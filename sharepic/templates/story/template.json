{
  "name": "Story",
  "root": "https://toolpic.fridaysforfuture.de/sharepic/templates/story/template.json",
  "preview": "sharepic/templates/story/preview.jpg",
  "documents": [
    {
      "width": 1080,
      "height": 1920,
      "src": "sharepic/templates/story/1080x1920.svg",
      "alias": "Instagram Story"
    }
  ],
  "fonts": [
    {
      "name": "Jost",
      "src": "fonts/Jost/Jost-600-Semi.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-400",
      "src": "fonts/Jost/Jost-400-Book.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Merriweather",
